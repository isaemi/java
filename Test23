//static - use with variables, methods, blocks
class Example6
{
	static int x;
	
	void show()
	{
		x++;
		System.out.println(x);
	}
}
public class Test23 {

	public static void main(String[] args) {
		Example6 e1 = new Example6();
		Example6 e2 = new Example6();
		Example6 e3 = new Example6();
		
		e1.show();
		e2.show();
		e3.show();
	}

}
